# Example .env file
# Copy this to .env and fill in your values

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["*"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Database
DATABASE_URL=sqlite:///./radarx.db
REDIS_URL=redis://localhost:6379/0

# Feature Store
FEATURE_STORE_BACKEND=redis
FEATURE_TTL_HOURS=24

# Model Settings
MODEL_DIR=./models
MODEL_VERSION=v1.2.3
FEATURE_VERSION=v2.0.1
ENABLE_ONLINE_LEARNING=true

# Data Sources (Optional - leave empty for demo mode)
DEXSCREENER_API_KEY=
ETHERSCAN_API_KEY=
BSCSCAN_API_KEY=
SOLSCAN_API_KEY=
ALCHEMY_API_KEY=

# Social APIs (Optional)
TWITTER_BEARER_TOKEN=
TELEGRAM_BOT_TOKEN=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# Risk Feeds (Optional)
RUGCHECK_API_KEY=
GOPLUS_API_KEY=

# Backtesting
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-01-01
BACKTEST_FEE_RATE=0.003
BACKTEST_SLIPPAGE_RATE=0.001

# Monitoring (Optional)
ENABLE_PROMETHEUS=true
ENABLE_SENTRY=false
SENTRY_DSN=

# Cache
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=10000
